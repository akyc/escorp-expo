include ./mixin.pug
include ./db.pug
block variables
doctype html
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        block pagetitle
        link(href="~/src/scss/styles.scss" rel="stylesheet")
        script(type="module" src="~/src/js/main.js")
    body
        header.header.py-3.mb-3.border-bottom
            .container-fluid
                .row
                    .col.d-flex.align-items-center.justify-content-space-between
                        a(href="https://minimir.ru/expo" class="me-auto")
                           img.logotype(src="https://minimir.ru/images/landings/strotskis-group-club/strotskis-group.svg", alt="strotskis-group")
                        a(href="./" class="btn btn-link-dark px-2 fw-bold navbar-toggler" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbarLight" aria-controls="offcanvasNavbarLight") МЕНЮ

                        div.offcanvas.offcanvas-end(tabindex="-1" id="offcanvasNavbarLight" aria-labelledby="offcanvasNavbarLightLabel")
                            .offcanvas-header
                                h5.offcanvas-title(id="offcanvasNavbarLightLabel") &nbsp;
                                button(type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close")
                            div.offcanvas-body
                                h5 Панели
                                ul.list-unstyled.pe-3
                                    each val in ['1.1','1.2','2.1','2.3','3.1','3.2','3.3','3.4','3.5','4.1','4.2','5.1','5.2','5.3','6.1','6.3','6.4','7.1','7.2','7.3','t']
                                        li.mb-1
                                            a.fs-5(href=`${val}.pug` class="nav-link")=val
                                h5 Потолок
                                ul.list-unstyled.pe-3
                                    each val in ['p1','p2','p3','p5','p6']
                                        li.mb-1
                                            a.fs-5(href=`${val}.pug` class="nav-link")=val
        block content
        footer.footer.py-3.border-top
            .container-fluid
                .row
                    .col 
                        small 2022 © Strotskis Group • Expo
                        